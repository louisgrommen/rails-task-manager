<div class="container">
  <div class="row mb-3">
    <h1>RailsTaskManager : Create a Task</h1>
  </div>
   <div class="row">
    <div class="alert alert-primary" role="alert">
      <a href="/tasks" class="card-link"><%= icon('fas', 'undo')%> Go back to the dashboard</a>
    </div>
  </div>
  <hr/>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>
